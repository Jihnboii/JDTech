<h1 class="form-title">List a Product</h1>

<%= form_with model: @product, local: true, class: 'product-form' do |form| %>
  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price, "Price" %>
    <%= form.number_field :price, step: 0.01, class: 'form-control', value: number_with_precision(@product.price, precision: 2, delimiter: ',', separator: '.', significant: false) %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Upload Image" %>
    <%= form.file_field :image, class: 'form-control image-input' %>
  </div>


  <div class="form-group">
    <%= form.label :features, "Key Features (comma separated)" %>
    <%= form.text_field :features, class: 'form-control' %>
  </div>

    <div class="form-group">
    <%= form.label :category, "Category" %>
    <%= form.select :category, options_for_select([
          ["Processors", "Processors"],
          ["Motherboards", "Motherboards"],
          ["Graphics Cards", "Graphics Cards"],
          ["Computer Memory/ RAM", "Computer Memory/ RAM"],
          ["Hard Drives & SSDs", "Hard Drives & SSDs"],
          ["Computer Cases", "Computer Cases"],
          ["Power Supplies", "Power Supplies"],
          ["Computer Fans & Cooling", "Computer Fans & Cooling"],
          ["Other", "Other"]
        ]), prompt: "Select a Category", class: "form-control" %>
  </div>

  <div>
    <%= form.number_field :user_id, value: current_user.id, type:"hidden" %>
  </div>

  <%= form.submit 'Create Product', class: 'btn btn-primary' %>
<% end %>
